{
    "name": "newism/craft-ckeditor",
    "description": "CKEditor field for CraftCMS",
    "license": "proprietary",
    "type": "craft-plugin",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "craft-plugin",
        "ckeditor-field",
        "ckedior"
    ],
    "authors": [
        {
            "name": "Leevi Graham",
            "email": "leevi@newism.com.au"
        }
    ],
    "support": {
        "email": "support@newism.com.au",
        "source": "https://github.com/newism/craft-ckeditor",
        "docs": "https://github.com/newism/craft-ckeditor/blob/master/README.md"
    },
    "require": {
        "php": ">=8.1",
        "craftcms/cms": "^4.3.6.1",
        "craftcms/html-field": "^2.0"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "Newism\\CkEditor\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "handle": "newism-ckeditor",
        "name": "CKEditor",
        "developer": "Newism",
        "developerUrl": "https://newism.com.au"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    }
}
